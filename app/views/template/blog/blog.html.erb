<div ng-repeat="post in posts()">

  <div class="row">
    <div class="col-xs-12 col-md-8">
      <h1>{{post.title}}</h1>
    </div>
  </div>

  <div class="row" style="color:grey;font-style:italic;">
    <div class="col-xs-12 col-sm-6 col-md-4">
      {{post.author_name}} | {{post.created_at  | date:'MMM d, yyyy H:m a'}}
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6" style="margin-top:20px">
      <p>{{post.body}}</p>
    </div>
  </div>

  <!-- comments -->
  <div class="well" style="padding:5px;" >

    <p ng-if="post.comments.length <= 0" style="margin:0;color:grey;font-style:italic;">No comments</p>

    <div ng-repeat="comment in post.comments" ng-if="post.comments.length > 0">
      <p style="color:grey;font-style:italic;margin-bottom:5px">{{comment.author_name}} | {{comment.created_at  | date:'MMM d, yyyy H:m a'}}</p>
      <p style="margin:0px">{{comment.body}}</p>
      <hr style="margin:5px;" ng-if="notLast(post.comments, comment)"/>
    </div>

  </div>

</div>
