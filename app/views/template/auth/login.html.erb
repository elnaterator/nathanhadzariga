
<div class="alert alert-danger" ng-repeat="err in errors">
  {{err}}
</div>

<h2>{{isNewUser ? 'Sign Up' : 'Login'}}</h2>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-4">

    <div class="form-group">
      <label for="login-email">Email</label>
      <input ng-model="user.email" id="login-email" class="form-control"></input>
    </div>

    <div class="form-group" ng-show="isNewUser">
      <label for="signup-name">Name</label>
      <input ng-model="user.name" id="signup-name" class="form-control"></input>
    </div>

    <div class="form-group">
      <label for="login-password">Password</label>
      <input ng-model="user.password" nates-enter="isNewUser?return:login()" id="login-password" type="password" class="form-control"></input>
    </div>

    <div class="form-group" ng-show="isNewUser">
      <label for="signup-password-confirm">Confirm Password</label>
      <input ng-model="user.password_confirmation" nates-enter="isNewUser?signup():return" id="signup-password-confirm" type="password" class="form-control"></input>
    </div>

    <button ng-click="login()" ng-hide="isNewUser" class="btn btn-primary">Login</button>
    <button ng-click="signup()" ng-show="isNewUser" class="btn btn-primary">Sign Up</button>
    <button ng-click="toggleNewUser()" class="btn btn-primary">{{isNewUser ? 'I already have an account' : 'I need to sign up'}}</button>

  </div>
</div>
